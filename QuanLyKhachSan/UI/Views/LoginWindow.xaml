<Window x:Class="QuanLyKhachSan.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views"
        mc:Ignorable="d"
        Title="LoginWindow" 
        ResizeMode="NoResize"
        WindowStyle="None"
        Height="800" 
        Width="1280"
        WindowStartupLocation="CenterScreen">
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FF7AB1FF" Offset="0"/>
            <GradientStop Color="#FFCE79FB" Offset="0.9"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Border
        Width="600"
        Height="600"
        Background="White"
        CornerRadius="48"
        Padding="64, 48">

            <StackPanel>
                <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Ehotel"
                FontSize="52"
                FontFamily="pack://application:,,,/Resources/Fonts/#Lobster"
                Foreground="#1366D9"/>

                <TextBlock
                Width="480"
                HorizontalAlignment="Center"
                TextWrapping="Wrap"
                TextAlignment="Center"
                Text="Chào mừng đến với khách sạn Ehotel - Hệ thống dành cho nhân viên khách sạn"
                FontSize="22"
                FontWeight="Regular"
                Margin="0, 24, 0, 0"/>

                <Border
                Width="472"
                Height="70"
                Background="#F6FCFF"
                BorderBrush="#1A000000"
                BorderThickness="2"
                CornerRadius="12"
                Padding="16, 0"
                Margin="0, 48, 0, 0">

                    <TextBox
                    materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                    BorderThickness="0"
                    FontSize="24"
                    FontWeight="Medium"
                    materialDesign:HintAssist.Hint="User ID"/>
                </Border>

                <Border
                Width="472"
                Height="70"
                Background="#F6FCFF"
                BorderBrush="#1A000000"
                BorderThickness="2"
                CornerRadius="12"
                Padding="16, 0"
                Margin="0, 24, 0, 0">

                    <PasswordBox
                    materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                    BorderThickness="0"
                    FontSize="24"
                    FontWeight="Medium"
                    materialDesign:HintAssist.Hint="Password"/>
                </Border>

                <Button
                Style="{DynamicResource BlueButtonStyle}"
                Content="Đăng nhập"
                Width="330"
                Height="75"
                FontSize="28"
                Cursor="Hand"
                Margin="0, 48, 0, 0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
