<Window x:Class="QuanLyKhachSan.UI.Views.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views"
        mc:Ignorable="d"
        Title="InvoiceWindow" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent" 
        Height="Auto" 
        Width="Auto"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border 
    Grid.Column="1"
    Background="White" 
    CornerRadius="12" 
    Height="700"
    Width="440"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
    Margin="0, 24, 16, 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border
            Grid.Row="0"
            Width="440"
            Height="56"
            Background="#1570EF"
            CornerRadius="12 12 0 0">
                    <TextBlock 
                Text="Hóa Đơn" 
                FontSize="22" 
                FontWeight="SemiBold"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                </Border>

                <ScrollViewer 
            Grid.Row="1"
            Width="408"
            Padding="0, 16"
            HorizontalAlignment="Center"
            VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding }">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding }" FontSize="22" FontWeight="Medium"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock 
                                        Grid.Column="0" 
                                        HorizontalAlignment="Left"
                                        Text="{Binding }" 
                                        FontSize="20" FontWeight="Medium"/>

                                            <TextBlock 
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        Text="{Binding }" 
                                        FontSize="20" FontWeight="Medium"/>
                                        </Grid>

                                        <TextBlock Text="{Binding }" FontSize="18" FontWeight="Medium"/>
                                        <Separator Margin="0 8 0 0" Background="#DDD"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ItemsControl ItemsSource="{Binding }">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding }" FontSize="22" FontWeight="Medium"/>

                                        <TextBlock 
                                    Text="{Binding }" 
                                    FontSize="20" 
                                    FontWeight="Medium"/>

                                        <Separator Margin="0 8 0 0" Background="#DDD"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel
                    Grid.Row="2"
                    Margin="16,8,0,8" 
                    HorizontalAlignment="Left">

                    <TextBlock
                        Text="Phương thức thanh toán:"
                        FontSize="18"
                        FontWeight="Bold"/>

                    <StackPanel 
                        Orientation="Horizontal">
                        <RadioButton Content="Tiền mặt" GroupName="PaymentMethod" FontSize="20" Padding="10,5"/>
                        <RadioButton Content="Thẻ" GroupName="PaymentMethod" FontSize="20" Padding="10,5"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel 
                    Grid.Row="3"
                    Margin="0 0 16 22" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
                    <TextBlock Text="Tổng: " FontWeight="Bold" FontSize="20"/>
                    <TextBlock Text="{Binding }" FontSize="20"/>
                </StackPanel>

                <Button 
            Grid.Row="4"
            Style="{DynamicResource BlueButtonStyle}"
            Width="200"
            Height="50"
            Cursor="Hand"
            Margin="0, 0, 0, 16">
                    <StackPanel
                Orientation="Horizontal">
                        <materialDesign:PackIcon
                    Width="28"
                    Height="28"
                    VerticalAlignment="Center"
                    Kind="CartOutline"/>
                        <TextBlock
                    Text="Thanh toán"
                    FontSize="20"
                    VerticalAlignment="Center"
                    Margin="4, 0, 0, 0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
