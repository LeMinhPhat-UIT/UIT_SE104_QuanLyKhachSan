<Window x:Class="QuanLyKhachSan.UI.Views.AddUpdateRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views"
        mc:Ignorable="d"
        Title="AddRoomWindow" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        Height="400" 
        Width="600">
    <Grid>
        <Border
            Width="600"
            Height="400"
            Background="#FFFFFF"
            CornerRadius="12"
            Padding="48, 24">

            <StackPanel
                ClipToBounds="False">
                <materialDesign:PackIcon
                    Width="22"
                    Height="22"
                    Kind="DeleteOutline"
                    HorizontalAlignment="Right"
                    Cursor="Hand"
                    Margin="0, -8, -24, 0"/>

                <TextBlock
                    Text="Nhập thông tin phòng"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="#1570EF"
                    Margin="0, -12, 0, 0"/>

                <Grid
                    Margin="0, 24, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0">
                        <TextBlock
                            Text="Số phòng:"
                            FontSize="14"
                            FontWeight="SemiBold"/>

                        <Border
                            Width="230"
                            Height="35"
                            Background="#DCF1FF"
                            HorizontalAlignment="Left"
                            CornerRadius="8"
                            Padding="8, 0"
                            Margin="0, 8, 0, 0">
                            <TextBox
                                materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                BorderThickness="0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Margin="22, 0, 0, 0">
                        <TextBlock
                            Text="Loại phòng:"
                            FontSize="14"
                            FontWeight="SemiBold"/>

                        <Border
                            Width="230"
                            Height="35"
                            Background="#DCF1FF"
                            CornerRadius="8"
                            Padding="8, 0"
                            Margin="0, 8, 0, 0">
                            <ComboBox
                                    materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                    BorderThickness="0"
                                    Height="35">
                            </ComboBox>
                        </Border>
                    </StackPanel>
                </Grid>

                <Grid
                    Margin="0, 24, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0">
                        <TextBlock
                            Text="Giá (VNĐ):"
                            FontSize="14"
                            FontWeight="SemiBold"/>

                        <Border
                            Width="230"
                            Height="35"
                            Background="#DCF1FF"
                            HorizontalAlignment="Left"
                            CornerRadius="8"
                            Padding="8, 0"
                            Margin="0, 8, 0, 0">
                            <TextBox
                                materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                BorderThickness="0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right">
                        <TextBlock
                            Text="Tình trạng:"
                            FontSize="14"
                            FontWeight="SemiBold"/>

                        <Border
                            Width="230"
                            Height="35"
                            Background="#DCF1FF"
                            HorizontalAlignment="Left"
                            CornerRadius="8"
                            Padding="8, 0"
                            Margin="0, 8, 0, 0">
                            <ComboBox
                                materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                BorderThickness="0"
                                Height="35">
                            </ComboBox>
                        </Border>
                    </StackPanel>
                </Grid>

                <StackPanel
                    Grid.Column="0"
                    Margin="0, 24, 0, 0">
                    <TextBlock
                            Text="Cơ sở vật chất:"
                            FontSize="14"
                            FontWeight="SemiBold"/>

                    <Border
                            Width="504"
                            Height="35"
                            Background="#DCF1FF"
                            HorizontalAlignment="Left"
                            CornerRadius="8"
                            Padding="8, 0"
                            Margin="0, 8, 0, 0">
                        <ComboBox
                            materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                            BorderThickness="0"
                            Height="35">
                        </ComboBox>
                    </Border>
                </StackPanel>

                <Button
                    Style="{DynamicResource BlueButtonStyle}"
                    Content="Lưu"
                    Width="80"
                    Height="35"
                    HorizontalAlignment="Right"
                    Padding="4"
                    Cursor="Hand"
                    Margin="0, 24, 0, 0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
