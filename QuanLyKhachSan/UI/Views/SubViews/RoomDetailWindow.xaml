<Window x:Class="QuanLyKhachSan.UI.Views.SubViews.RoomDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views.SubViews"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown"
        Title="RoomDetailWindow" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        Height="400" 
        Width="600">
    <Grid>
        <Border
            Width="600"
            Height="400"
            Background="#FFFFFF"
            CornerRadius="12"
            Padding="48, 24">

            <StackPanel
                ClipToBounds="False">
                <Button 
                    Command="{Binding Close}"
                    Width="22" 
                    Height="22" 
                    HorizontalAlignment="Right" 
                    Cursor="Hand" 
                    Margin="0, -8, -24, 0" 
                    Padding="0">
                    <materialDesign:PackIcon Kind="DeleteOutline" Width="22" Height="22" />
                </Button>

                <TextBlock
                    Text="Chi tiết phòng"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="#1570EF"
                    Margin="0, -12, 0, 0"/>

                <Grid
                    Margin="0, 24, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0">
                        <TextBlock
                            Text="Check in:"
                            FontSize="14"
                            FontWeight="SemiBold"/>

                        <Border
                            Width="230"
                            Height="35"
                            Background="#DCF1FF"
                            HorizontalAlignment="Left"
                            CornerRadius="8"
                            Padding="8, 0"
                            Margin="0, 8, 0, 0">
                            <DatePicker
                                IsHitTestVisible="False"
                                Focusable="False"
                                SelectedDate="{Binding Reservation.CheckIn}"
                                materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                BorderThickness="0"
                                VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right">
                        <TextBlock
                            Text="Check out:"
                            FontSize="14"
                            FontWeight="SemiBold"/>

                        <Border
                            Width="230"
                            Height="35"
                            Background="#DCF1FF"
                            HorizontalAlignment="Left"
                            CornerRadius="8"
                            Padding="8, 0"
                            Margin="0, 8, 0, 0">
                            <DatePicker
                                IsHitTestVisible="False"
                                Focusable="False"
                                SelectedDate="{Binding Reservation.CheckOut}"
                                materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                BorderThickness="0"
                                VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>



                <StackPanel
                    Grid.Column="0"
                    Margin="0, 18, 0, 0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Text="Khách hàng:"
                            FontSize="14"
                            FontWeight="SemiBold"/>

                        <Button
                            Grid.Column="1"
                            Command="{Binding CustomerAdd}"
                            Width="20" 
                            Height="20"
                            VerticalAlignment="Center"  
                            Background="#E8F1FD"
                            Cursor="Hand">
                            <materialDesign:PackIcon 
                                Kind="Plus" 
                                Width="20" 
                                Height="20" 
                                Foreground="#1570EF"/>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border 
                                        Background="{TemplateBinding Background}" 
                                        CornerRadius="20">
                                        <ContentPresenter 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <DataGrid
                        Grid.Row="1"
                        Width="504"
                        Height="130" 
                        Background="#F7F9FC"
                        ItemsSource="{Binding Reservation.Customers}"
                        materialDesign:DataGridAssist.CornerRadius="12"
                        SelectionUnit="FullRow"
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        RowHeight="50"
                        ColumnWidth="*"
                        Margin="0, 8, 0, 0">

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Họ và tên" Binding="{Binding CustomerName}" Width="*"/>
                            <DataGridTextColumn Header="CCCD" Binding="{Binding IdentityNumber}" Width="*"/>
                            <DataGridTextColumn Header="Ghi chú" Binding="{Binding PhoneNumber}" Width="*"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <!--<Button
                    Style="{DynamicResource BlueButtonStyle}"
                    Content="Lưu"
                    Width="80"
                    Height="35"
                    HorizontalAlignment="Right"
                    Padding="4"
                    Cursor="Hand"
                    Margin="0, 18, 0, 0"/>-->
            </StackPanel>
        </Border>
    </Grid>
</Window>
