<Window x:Class="QuanLyKhachSan.UI.Views.SubViews.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views.SubViews"
        xmlns:i="clr-namespace:QuanLyKhachSan.ViewModel"
        mc:Ignorable="d"
        MouseDown="Window_MouseDown"
        Title="InvoiceWindow" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent" 
        Height="Auto" 
        Width="Auto"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <i:RadioButtonCheckedConverter x:Key="RadioButtonCheckedConverter"/>
    </Window.Resources>
    
    <Grid>
        <Border
            Background="White" 
            CornerRadius="12" 
            Height="Auto"
            Width="440"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Width="440"
                    Height="56"
                    Background="#1570EF"
                    CornerRadius="12 12 0 0">
                    <TextBlock 
                        Text="Hóa Đơn" 
                        FontSize="22" 
                        FontWeight="SemiBold"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Border>

                <ScrollViewer 
                    Grid.Row="1"
                    Width="408"
                    Padding="0, 16"
                    HorizontalAlignment="Center"
                    VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">

                            <TextBlock
                                Text="Phòng "
                                FontSize="22" 
                                FontWeight="Medium">
                                <Run Text="{Binding Room.RoomNumber}" FontSize="22" FontWeight="Medium"/>
                            </TextBlock>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock 
                                    Grid.Column="0" 
                                    HorizontalAlignment="Left"
                                    Text="Loại phòng: " 
                                    FontSize="20" FontWeight="Medium">
                                    <Run Text="{Binding Room.RoomTierName}" FontSize="20" FontWeight="Medium"/>
                                </TextBlock>

                                <TextBlock 
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Text="{Binding Room.PricePerDay, StringFormat={}{0:N0}}" 
                                    FontSize="20" FontWeight="Medium"/>
                            </Grid>

                            <TextBlock FontSize="18" FontWeight="Medium">
                                <Run Text="{Binding CustomersCount, Mode=OneWay}"></Run>
                                <Run Text="người, "></Run>
                                <Run Text="{Binding Reservation.Nights, Mode=OneWay}"></Run>
                                <Run Text="đêm"></Run>
                            </TextBlock>

                            <Separator Margin="0 8 0 0" Background="#DDD"/>

                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Text="Khách "
                                Grid.Column="0"
                                FontSize="22" FontWeight="Medium"/>
                        </Grid>
                        <ItemsControl ItemsSource="{Binding Reservation.Customers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Text="{Binding CustomerName}" 
                                            FontSize="22" 
                                            FontWeight="Medium"/>

                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Text="{Binding IdentityNumber}" 
                                            FontSize="20" 
                                            FontWeight="Medium"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Separator Margin="0 8 0 0" Background="#DDD"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock 
                                Grid.Column="0" 
                                Text="Phụ thu: " 
                                FontSize="20" 
                                FontWeight="Medium"/>
                            <TextBlock 
                                Grid.Column="1" 
                                HorizontalAlignment="Right"
                                Text="{Binding Invoice.SurchargeRate}" 
                                FontSize="20" 
                                FontWeight="Medium"/>
                        </Grid>

                        <Separator Margin="0 8 0 0" Background="#DDD"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock 
                                Grid.Column="0" 
                                Text="Hệ số: " 
                                FontSize="20" 
                                FontWeight="Medium"/>
                            <TextBlock 
                                Grid.Column="1" 
                                HorizontalAlignment="Right"
                                Text="{Binding Invoice.Coef}" 
                                FontSize="20" 
                                FontWeight="Medium"/>
                        </Grid>

                    </StackPanel>
                </ScrollViewer>

                <StackPanel
                    Grid.Row="2"
                    Margin="16,8,0,8" 
                    HorizontalAlignment="Left">

                    <TextBlock
                        Text="Phương thức thanh toán:"
                        FontSize="18"
                        FontWeight="Bold"/>

                    <StackPanel
                        Orientation="Horizontal">
                        <RadioButton 
                            Content="Tiền mặt" 
                            Tag="Cash" 
                            GroupName="PaymentMethod" 
                            FontSize="20" 
                            Padding="10,5"
                            IsChecked="{Binding Invoice.PaymentMethod, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter=Cash}"/>
                        <RadioButton 
                            Content="Thẻ" 
                            Tag="Credit card"
                            GroupName="PaymentMethod"
                            FontSize="20" 
                            Padding="10,5"
                            IsChecked="{Binding Invoice.PaymentMethod, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter=Credit card}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel 
                    Grid.Row="3"
                    Margin="0 0 16 22" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
                    <TextBlock Text="Tổng: " FontWeight="Bold" FontSize="20"/>
                    <TextBlock Text="{Binding Invoice.Total, StringFormat={}{0:N0}}" FontSize="20"/>
                </StackPanel>

                <Button 
                    Grid.Row="4"
                    Style="{DynamicResource BlueButtonStyle}"
                    Command="{Binding Pay}"
                    Width="200"
                    Height="50"
                    Cursor="Hand"
                    Margin="0, 0, 0, 16">
                    <StackPanel
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="28"
                            Height="28"
                            VerticalAlignment="Center"
                            Kind="CartOutline"/>
                        <TextBlock
                            Text="Thanh toán"
                            FontSize="20"
                            VerticalAlignment="Center"
                            Margin="4, 0, 0, 0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
