<Window x:Class="QuanLyKhachSan.UI.Views.RentReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views"
        mc:Ignorable="d"
        Title="RentReceiptWindow" 
        ResizeMode="NoResize"
        WindowStyle="None"
        Height="800" 
        Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <Grid
        x:Name="grdSideBar"
        Margin="0"
        Height="800"
        Width="256"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text="Ehotel"
            FontSize="42"
            FontFamily="pack://application:,,,/Resources/Fonts/#Lobster"
            Foreground="#1366D9"
            Cursor="Hand"
            Margin="0, 22, 0, 0"/>

            <StackPanel
            x:Name="spMenu"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="196"
            Margin="0">

                <ToggleButton 
                Style="{StaticResource SidebarToggleButtonStyle}" 
                Content="Tổng quan"
                Tag="HomeOutline"
                Cursor="Hand"/>

                <ToggleButton 
                Style="{StaticResource SidebarToggleButtonStyle}" 
                Content="Đặt phòng"
                Tag="ShapePlusOutline"
                Cursor="Hand"
                Margin="0, 8, 0, 0"/>

                <ToggleButton 
                Style="{StaticResource SidebarToggleButtonStyle}" 
                Content="Phòng"
                Tag="BedOutline"
                Cursor="Hand"
                Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phiếu thuê"
                    Tag="TicketOutline"
                    Cursor="Hand"
                    IsChecked="True"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                Style="{StaticResource SidebarToggleButtonStyle}" 
                Content="Doanh thu"
                Tag="ChartBellCurveCumulative"
                Cursor="Hand"
                Margin="0, 8, 0, 0"/>

                <ToggleButton 
                Style="{StaticResource SidebarToggleButtonStyle}" 
                Content="Nhân viên"
                Tag="AccountGroupOutline"
                Cursor="Hand"
                Margin="0, 8, 0, 0"/>
            </StackPanel>

        </Grid>

        <Grid
        x:Name="gridHome"
        Grid.Column="1"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Height="800"
        Width="1024"
        Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid
            x:Name="grdHeader"
            Grid.Row="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="100"
            Width="1024">

                <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">

                    <materialDesign:PackIcon 
                    Kind="BellOutline"
                    Width="32"
                    Height="32"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    Foreground="#5D6679"
                    Margin="0, 0, 14, 0"/>

                    <materialDesign:PackIcon 
                    Kind="EmailOutline"
                    Width="32"
                    Height="32"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    Foreground="#5D6679"
                    Margin="0, 0, 32, 0"/>

                    <Border
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    CornerRadius="18"
                    Background="#A1C7FF"
                    Width="320"
                    Height="70"
                    Padding="12,8"
                    Margin="0,0,16,0"
                    Cursor="Hand">
                        <StackPanel
                            Orientation="Horizontal">

                            <Ellipse 
                                Width="52" 
                                Height="52"
                                VerticalAlignment="Center">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Resources/Images/meomeo.webp"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <StackPanel
                                VerticalAlignment="Center"
                                Margin="16, 0, 0, 0">

                                <TextBlock 
                                    Text="Adminstrator:"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="SemiBold"/>

                                <TextBlock 
                                    Text="user@example.com"
                                    VerticalAlignment="Center"
                                    FontSize="16"    
                                    FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid
            x:Name="grdBody"
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="700"
            Width="1024"
            Background="#DFDFDF">

                <StackPanel
                x:Name="spBody"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="700"
                Width="1024">

                    <Border
                        Width="992"
                        Height="668"
                        Background="#FFFFFF"
                        HorizontalAlignment="Center"
                        CornerRadius="12"
                        Padding="16"
                        Margin="0, 16, 0, 0">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Width="300"
                                Height="40"
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="1"
                                BorderBrush="#D0D3D9"
                                CornerRadius="12">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <materialDesign:PackIcon
                                        Grid.Column="0"
                                        Width="28"
                                        Height="28"
                                        Kind="Magnify"
                                        VerticalAlignment="Center"
                                        Foreground="#5D6679"
                                        Margin="8, 0, 0, 0"/>

                                    <TextBox
                                        Grid.Column="1"
                                        materialDesign:HintAssist.Hint="Tìm kiếm..."
                                        Width="Auto"
                                        Height="40"
                                        Background="Transparent"
                                        FontSize="14"
                                        Margin="8, 0, 0, 0"
                                        VerticalContentAlignment="Center"/>
                                </Grid>
                            </Border>

                            <DataGrid
                                Grid.Row="1"
                                Background="#F7F9FC"
                                ItemsSource="{Binding }"
                                materialDesign:DataGridAssist.CornerRadius="12"
                                AutoGenerateColumns="False"
                                HeadersVisibility="Column"
                                CanUserAddRows="False"
                                IsReadOnly="True"
                                RowHeight="50"
                                ColumnWidth="*"
                                Margin="0, 24, 0, 0">

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding }" Width="*"/>
                                    <DataGridTextColumn Header="Số phòng" Binding="{Binding }" Width="*"/>
                                    <DataGridTextColumn Header="Check in" Binding="{Binding }" Width="*"/>
                                    <DataGridTextColumn Header="Check out" Binding="{Binding }" Width="*"/>
                                    <DataGridTemplateColumn Header="Trạng thái" Width="*" SortMemberPath="TinhTrang">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border 
                                                    x:Name="statusBorder"
                                                    Width="52"
                                                    Height="24"
                                                    CornerRadius="12"
                                                    Padding="4"
                                                    HorizontalAlignment="Left">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding }" Value="Check in">
                                                                    <Setter Property="Background" Value="#E8F1FD"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding }" Value="Pending">
                                                                    <Setter Property="Background" Value="#FEECEB"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>

                                                    <TextBlock 
                                                        Text="{Binding }"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        TextAlignment="Center"
                                                        FontSize="12"
                                                        FontWeight="Regular">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding }" Value="Check in">
                                                                        <Setter Property="Foreground" Value="#448DF2"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding }" Value="Pending">
                                                                        <Setter Property="Foreground" Value="#F36960"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="60">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <materialDesign:PackIcon
                                                    Width="20"
                                                    Height="20"
                                                    Foreground="#5D6679"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Cursor="Hand"
                                                    Kind="DotsVertical"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
