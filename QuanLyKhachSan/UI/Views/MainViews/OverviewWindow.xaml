<UserControl 
    x:Class="QuanLyKhachSan.UI.Views.MainViews.OverviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views.MainViews"
    xmlns:behaviors="clr-namespace:QuanLyKhachSan.ViewModel.ScrollBehavior"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <Grid
            Background="White"
            x:Name="grdSideBar"
            Margin="0"
            Height="800"
            Width="256"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Ehotel"
                FontSize="42"
                FontFamily="pack://application:,,,/Resources/Fonts/#Lobster"
                Foreground="#1366D9"
                Cursor="Hand"
                Margin="0, 22, 0, 0"/>

            <StackPanel
                x:Name="spMenu"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="196"
                Margin="0">

                <ToggleButton 
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Tổng quan"
                    Tag="HomeOutline"
                    Cursor="Hand"
                    IsChecked="True"/>

                <ToggleButton
                    Command="{Binding SidebarCommand.BookingWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Đặt phòng"
                    Tag="ShapePlusOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.RoomWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phòng"
                    Tag="BedOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.ReservationWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phiếu thuê"
                    Tag="TicketOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.RevenueWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Doanh thu"
                    Tag="ChartBellCurveCumulative"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.UserWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Nhân viên"
                    Tag="AccountGroupOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.SettingWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Thiết lập"
                    Tag="SettingsOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/> 
            </StackPanel>

        </Grid>

        <Grid
            x:Name="gridHome"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="800"
            Width="1024"
            Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid
                Background="White"
                x:Name="grdHeader"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="100"
                Width="1024">

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <materialDesign:PackIcon 
                        Kind="BellOutline"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="#5D6679"
                        Margin="0, 0, 14, 0"/>

                    <materialDesign:PackIcon 
                        Kind="EmailOutline"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="#5D6679"
                        Margin="0, 0, 32, 0"/>

                    <Border
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        CornerRadius="18"
                        Background="#A1C7FF"
                        Width="320"
                        Height="70"
                        Padding="12,8"
                        Margin="0,0,16,0"
                        Cursor="Hand">

                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Đăng xuất" Click="Logout_Click"/>
                                <MenuItem Header="Thay đổi mật khẩu" Click="ChangePassword_Click"/>
                            </ContextMenu>
                        </Border.ContextMenu>

                        <Grid>
                            <StackPanel
                                Orientation="Horizontal">

                                <Ellipse 
                                    Width="52" 
                                    Height="52"
                                    VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="pack://application:,,,/Resources/Images/user.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <StackPanel
                                    VerticalAlignment="Center"
                                    Margin="16, 0, 0, 0">

                                    <TextBlock 
                                        Text="{Binding User.UserRole}"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="SemiBold"/>

                                    <TextBlock 
                                        Text="{Binding User.UserEmail}"
                                        VerticalAlignment="Center"
                                        FontSize="16"    
                                        FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>

                            <Popup x:Name="ChangePasswordPopup"
                                PlacementTarget="{Binding ElementName=ChangePasswordMenuItem}"
                                Placement="Bottom"
                                StaysOpen="False"
                                AllowsTransparency="True">
                                <Border Background="White"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="10"
                                    Effect="{StaticResource MaterialDesignShadowDepth2}">
                                    <StackPanel>
                                        <TextBlock Text="Nhập mật khẩu mới:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="0,0,0,10"/>
                                        <Button Content="Cập nhật" Click="UpdatePassword_Click" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                </StackPanel>


            </Grid>

            <Grid
                x:Name="grdBody"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="700"
                Width="1024"
                Background="#DFDFDF">

                <StackPanel
                    x:Name="spBody"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="700"
                    Width="1024">

                    <Border
                        HorizontalAlignment="Center"
                        Background="#FFFFFF"
                        Padding="16, 8"
                        CornerRadius="12"
                        Width="992"
                        Height="100"
                        Margin="0, 24, 0, 0">

                        <StackPanel>
                            <TextBlock
                                Text="Tổng quan"
                                FontSize="18"
                                FontWeight="Medium"
                                Foreground="#000000"
                                Margin="16, 0, 0, 0"/>
                            <Grid
                                Margin="0, 8, 0, 0">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Orientation="Horizontal"
                                    Grid.Column="0"
                                    Margin="16, 0, 0, 0">
                                    <StackPanel>
                                        <TextBlock
                                            Text="Hôm nay"
                                            FontSize="14"
                                            Foreground="#858D9D"/>
                                        <TextBlock
                                            Text="Check-in"
                                            FontSize="18"
                                            FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock
                                        VerticalAlignment="Bottom"
                                        Text="{Binding CheckIn}"
                                        FontSize="26"
                                        FontWeight="Medium"
                                        Foreground="#1366D9"
                                        Margin="12, 0, 0, 0"/>
                                </StackPanel>

                                <StackPanel
                                    Orientation="Horizontal"
                                    Grid.Column="1"
                                    Margin="16, 0, 0, 0">
                                    <StackPanel>
                                        <TextBlock
                                            Text="Hôm nay"
                                            FontSize="14"
                                            Foreground="#858D9D"/>
                                        <TextBlock
                                            Text="Check-out"
                                            FontSize="18"
                                            FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock
                                        VerticalAlignment="Bottom"
                                        Text="{Binding CheckOut}"
                                        FontSize="26"
                                        FontWeight="Medium"
                                        Foreground="#1366D9"
                                        Margin="12, 0, 0, 0"/>
                                </StackPanel>

                                <StackPanel
                                    Orientation="Horizontal"
                                    Grid.Column="2"
                                    Margin="16, 0, 0, 0">
                                    <StackPanel>
                                        <TextBlock
                                            Text="Tổng"
                                            FontSize="14"
                                            Foreground="#858D9D"/>
                                        <TextBlock
                                            Text="Đang lưu trú"
                                            FontSize="18"
                                            FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock
                                        VerticalAlignment="Bottom"
                                        Text="{Binding Staying}"
                                        FontSize="26"
                                        FontWeight="Medium"
                                        Foreground="#1366D9"
                                        Margin="12, 0, 0, 0"/>
                                </StackPanel>

                                <StackPanel
                                    Orientation="Horizontal"
                                    Grid.Column="3"
                                    Margin="16, 0, 0, 0">
                                    <StackPanel>
                                        <TextBlock
                                            Text="Tổng"
                                            FontSize="14"
                                            Foreground="#858D9D"/>
                                        <TextBlock
                                            Text="Phòng trống"
                                            FontSize="18"
                                            FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock
                                        VerticalAlignment="Bottom"
                                        Text="{Binding AvailableRoom}"
                                        FontSize="26"
                                        FontWeight="Medium"
                                        Foreground="#1366D9"
                                        Margin="12, 0, 0, 0"/>
                                </StackPanel>

                                <StackPanel
                                    Orientation="Horizontal"
                                    Grid.Column="4"
                                    Margin="16, 0, 0, 0">
                                    <StackPanel>
                                        <TextBlock
                                            Text="Tổng"
                                            FontSize="14"
                                            Foreground="#858D9D"/>
                                        <TextBlock
                                            Text="Phòng đã đặt"
                                            FontSize="18"
                                            FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock
                                        VerticalAlignment="Bottom"
                                        Text="{Binding OccupiedRoom}"
                                        FontSize="26"
                                        FontWeight="Medium"
                                        Foreground="#1366D9"
                                        Margin="12, 0, 0, 0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border
                        HorizontalAlignment="Center"
                        Background="#FFFFFF"
                        Padding="8"
                        CornerRadius="12"
                        Width="992"
                        Height="190"
                        Margin="0, 24, 0, 0">

                        <StackPanel>
                            <TextBlock
                                Text="Phòng"
                                FontSize="18"
                                FontWeight="Medium"                    
                                Foreground="#000000"
                                Margin="24, 0, 0, 0"/>

                            <ScrollViewer 
                                VerticalScrollBarVisibility="Hidden"
                                HorizontalScrollBarVisibility="Hidden"
                                behaviors:HorizontalScrollOnMouseWheelBehavior.EnableHorizontalScroll="True"
                                >
                                <ItemsControl ItemsSource="{Binding RoomTierList}" Margin="0, 22, 0, 0">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="230" Height="120" BorderBrush="#D0D3D9" BorderThickness="1" CornerRadius="12" Margin="10,0,0,0">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#101828" Opacity="0.1" ShadowDepth="1" Direction="270" BlurRadius="3"/>
                                                </Border.Effect>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0" Text="{Binding RoomTierName, Mode=OneWay}" FontSize="16" FontWeight="Medium" VerticalAlignment="Center" Margin="16,0,0,0"/>

                                                    <TextBlock Grid.Row="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                                        <Run Text="{Binding RoomCount, Mode=OneWay}" FontSize="24" FontWeight="Medium"/>
                                                        <Run Text="/" FontSize="24" FontWeight="Medium" Foreground="#858D9D"/>
                                                        <Run Text="30" FontSize="18" FontWeight="Medium" Foreground="#858D9D"/>
                                                    </TextBlock>

                                                    <TextBlock Grid.Row="2" VerticalAlignment="Center" Margin="16,0,0,0">
                                                        <Run Text="{Binding RoomTierPrice, Mode=OneWay, StringFormat={}{0:N0}}" FontSize="22" FontWeight="Medium" Foreground="#1366D9"/>
                                                        <Run Text=" VNĐ" FontSize="22" FontWeight="Medium" Foreground="#1366D9"/>
                                                        <Run Text="/" FontSize="22" FontWeight="Medium" Foreground="#858D9D"/>
                                                        <Run Text="ngày" FontSize="16" FontWeight="Medium" Foreground="#858D9D"/>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                        </StackPanel>

                    </Border>

                    <Grid
                        HorizontalAlignment="Center"
                        Margin="0, 24, 0, 0"
                        Width="992">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Width="480"
                            Height="300"
                            Background="#FFFFFF"
                            Padding="16"
                            CornerRadius="12">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel
                                    Grid.Row="0"
                                    Orientation="Horizontal">

                                    <TextBlock
                                        Text="Doanh thu tuần"
                                        FontSize="20"
                                        FontWeight="Medium"
                                        Foreground="#383E49"/>
                                </StackPanel>

                                <lvc:CartesianChart 
                                    Grid.Row="1" 
                                    Padding="0, 16" 
                                    Series="{Binding Series}" 
                                    XAxes="{Binding XAxis}"
                                    YAxes="{Binding YAxis}"
                                    LegendPosition="Hidden"
                                    Background="White" 
                                    ZoomMode="None"
                                    DrawMarginFrame="{x:Null}"/>
                            </Grid>

                        </Border>

                        <Border
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="480"
                            Height="230"
                            Background="#FFFFFF"
                            Padding="16, 8"
                            CornerRadius="12">

                            <StackPanel>
                                <TextBlock
                                    Text="Tình trạng phòng"
                                    FontSize="22"
                                    FontWeight="Medium"/>

                                <Grid
                                    Margin="0, 32, 0, 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel
                                        Grid.Column="0">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Text="Phòng đang dùng"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Grid.Column="0" />

                                            <TextBlock
                                                Text="{Binding AvailableRoom}"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Grid.Column="1"
                                                HorizontalAlignment="Right" 
                                                Margin="0, 0, 12, 0"/>
                                        </Grid>

                                        <Grid
                                            Margin="0, 16, 0, 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Text="Đã dọn dẹp"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="0" />

                                            <TextBlock
                                                Text="104"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="1"
                                                HorizontalAlignment="Right" 
                                                Margin="0, 0, 12, 0"/>
                                        </Grid>

                                        <Grid
                                            Margin="0, 16, 0, 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Text="Cần dọn dẹp"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="0" />

                                            <TextBlock
                                                Text="104"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="1"
                                                HorizontalAlignment="Right" 
                                                Margin="0, 0, 12, 0"/>
                                        </Grid>

                                        <Grid
                                            Margin="0, 16, 0, 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Text="Đã kiểm tra"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="0" />

                                            <TextBlock
                                                Text="104"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="1"
                                                HorizontalAlignment="Right" 
                                                Margin="0, 0, 12, 0"/>
                                        </Grid>
                                    </StackPanel>

                                    <StackPanel
                                        Grid.Column="1">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Text="Phòng trống"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Grid.Column="0" 
                                                Margin="12, 0, 0. 0"/>

                                            <TextBlock
                                                Text="{Binding OccupiedRoom}"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Grid.Column="1"
                                                HorizontalAlignment="Right" />
                                        </Grid>

                                        <Grid
                                            Margin="0, 16, 0, 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Text="Đã dọn dẹp"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="0" 
                                                Margin="12, 0, 0. 0"/>

                                            <TextBlock
                                                Text="104"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="1"
                                                HorizontalAlignment="Right" />
                                        </Grid>

                                        <Grid
                                            Margin="0, 16, 0, 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Text="Cần dọn dẹp"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="0" 
                                                Margin="12, 0, 0. 0"/>

                                            <TextBlock
                                                Text="104"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="1"
                                                HorizontalAlignment="Right" />
                                        </Grid>

                                        <Grid
                                            Margin="0, 16, 0, 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Text="Đã kiểm tra"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="0" 
                                                Margin="12, 0, 0. 0"/>

                                            <TextBlock
                                                Text="104"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#858D9D"
                                                Grid.Column="1"
                                                HorizontalAlignment="Right" />
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

            </Grid>
        </Grid>

    </Grid>
</UserControl>
