<UserControl 
    x:Class="QuanLyKhachSan.UI.Views.MainViews.StaffWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views.MainViews"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
    mc:Ignorable="d"
    Height="800" 
    Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <Grid
            Background="White"
            x:Name="grdSideBar"
            Margin="0"
            Height="800"
            Width="256"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Ehotel"
                FontSize="42"
                FontFamily="pack://application:,,,/Resources/Fonts/#Lobster"
                Foreground="#1366D9"
                Cursor="Hand"
                Margin="0, 22, 0, 0"/>

            <StackPanel
                x:Name="spMenu"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="196"
                Margin="0">

                <ToggleButton 
                    Command="{Binding SidebarCommand.OverviewWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Tổng quan"
                    Tag="HomeOutline"
                    Cursor="Hand"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.BookingWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Đặt phòng"
                    Tag="ShapePlusOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.RoomWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phòng"
                    Tag="BedOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.ReservationWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phiếu thuê"
                    Tag="TicketOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.RevenueWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Doanh thu"
                    Tag="ChartBellCurveCumulative"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Nhân viên"
                    Tag="AccountGroupOutline"
                    Cursor="Hand"
                    IsChecked="True"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.SettingWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Thiết lập"
                    Tag="SettingsOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/> 
            </StackPanel>

        </Grid>

        <Grid
            x:Name="gridHome"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="800"
            Width="1024"
            Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid
                Background="White"
                x:Name="grdHeader"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="100"
                Width="1024">

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <materialDesign:PackIcon 
                        Kind="BellOutline"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="#5D6679"
                        Margin="0, 0, 14, 0"/>

                    <materialDesign:PackIcon 
                        Kind="EmailOutline"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="#5D6679"
                        Margin="0, 0, 32, 0"/>

                    <Border
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        CornerRadius="18"
                        Background="#A1C7FF"
                        Width="320"
                        Height="70"
                        Padding="12,8"
                        Margin="0,0,16,0"
                        Cursor="Hand">

                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Đăng xuất" Click="Logout_Click"/>
                                <MenuItem Header="Thay đổi mật khẩu" Click="ChangePassword_Click"/>
                            </ContextMenu>
                        </Border.ContextMenu>

                        <Grid>
                            <StackPanel
                                Orientation="Horizontal">

                                <Ellipse 
                                    Width="52" 
                                    Height="52"
                                    VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="pack://application:,,,/Resources/Images/user.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <StackPanel
                                    VerticalAlignment="Center"
                                    Margin="16, 0, 0, 0">

                                    <TextBlock 
                                        Text="{Binding User.UserRole}"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="SemiBold"/>

                                    <TextBlock 
                                        Text="{Binding User.UserEmail}"
                                        VerticalAlignment="Center"
                                        FontSize="16"    
                                        FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>

                            <Popup x:Name="ChangePasswordPopup"
                                
                                Placement="Bottom"
                                StaysOpen="False"
                                AllowsTransparency="True">
                                <Border Background="White"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="10"
                                    Effect="{StaticResource MaterialDesignShadowDepth2}">
                                    <StackPanel>
                                        <TextBlock Text="Nhập mật khẩu mới:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="0,0,0,10"/>
                                        <Button Content="Cập nhật" Click="UpdatePassword_Click" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="grdBody"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="700"
                Width="1024"
                Background="#DFDFDF">

                <StackPanel
                    x:Name="spBody"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="700"
                    Width="1024">

                    <Border
                        Width="992"
                        Height="668"
                        Background="#FFFFFF"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        CornerRadius="12"
                        Padding="16"
                        Margin="0, 16, 0, 0">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid
                                Grid.Row="0">

                                <Border
                                Width="300"
                                Height="40"
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="1"
                                BorderBrush="#D0D3D9"
                                CornerRadius="12">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon
                                            Grid.Column="0"
                                            Width="28"
                                            Height="28"
                                            Kind="Magnify"
                                            VerticalAlignment="Center"
                                            Foreground="#5D6679"
                                            Margin="8, 0, 0, 0"/>

                                        <TextBox
                                            Text="{Binding SearchingIdentity, UpdateSourceTrigger=PropertyChanged}"
                                            Grid.Column="1"
                                            materialDesign:HintAssist.Hint="Tìm kiếm theo CCCD..."
                                            Width="Auto"
                                            Height="40"
                                            Background="Transparent"
                                            FontSize="14"
                                            Margin="8, 0, 0, 0"
                                            VerticalContentAlignment="Center">
                                            <behavior:Interaction.Triggers>
                                                <behavior:EventTrigger EventName="TextChanged">
                                                    <behavior:InvokeCommandAction 
                                                        Command="{Binding Search}" />
                                                </behavior:EventTrigger>
                                            </behavior:Interaction.Triggers>
                                        </TextBox>
                                    </Grid>
                                </Border>

                                <Button
                                    Command="{Binding UserAdd}"
                                    Style="{DynamicResource BlueButtonStyle}"
                                    Content="Thêm nhân viên"
                                    Cursor="Hand"
                                    HorizontalAlignment="Right"/> 
                            </Grid>
                            

                            <DataGrid
                                Grid.Row="1"
                                Background="#F7F9FC"
                                ItemsSource="{Binding Users}"
                                SelectedItem="{Binding SelectedUser}"
                                materialDesign:DataGridAssist.CornerRadius="12"
                                AutoGenerateColumns="False"
                                HeadersVisibility="Column"
                                CanUserAddRows="False"
                                IsReadOnly="True"
                                RowHeight="50"
                                ColumnWidth="*"
                                Margin="0, 24, 0, 0">

                                <DataGrid.Resources>
                                    <ContextMenu x:Key="RowContextMenu">
                                        <!--"<MenuItem 
                                            Header="Chỉnh sửa thông tin"
                                            Command="{Binding DataContext.RoomAdd, RelativeSource={RelativeSource AncestorType=UserControl}}"/>-->
                                        <MenuItem 
                                            Header="Xóa nhân viên"
                                            Command="{Binding DataContext.UserDelete, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    </ContextMenu>
                                </DataGrid.Resources>
                                
                                <DataGrid.RowStyle>
                                    <Style TargetType="{x:Type DataGridRow}">
                                        <Setter Property="ContextMenu" Value="{StaticResource RowContextMenu}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F5FA"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="SizeToCells" />
                                    <DataGridTextColumn Header="Tên" Binding="{Binding UserName}" Width="SizeToCells"/>
                                    <DataGridTextColumn Header="CCCD" Binding="{Binding Identity}" Width="SizeToCells"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding UserEmail}" Width="SizeToCells"/>
                                    <DataGridTextColumn Header="Số điện thoại" Binding="{Binding PhoneNumber}" Width="SizeToCells"/>
                                    <DataGridTextColumn Header="Chức vụ" Binding="{Binding UserRole}" Width="SizeToCells"/>
                                    <DataGridTextColumn Header="Ngày vào làm" Binding="{Binding WorkingDate, StringFormat='dd/MM/yyyy'}" Width="SizeToCells"/>
                                    <DataGridTemplateColumn Width="60">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <materialDesign:PackIcon
                                                    Width="20"
                                                    Height="20"
                                                    Kind="DotsVertical"
                                                    Foreground="#5D6679"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Cursor="Hand"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
