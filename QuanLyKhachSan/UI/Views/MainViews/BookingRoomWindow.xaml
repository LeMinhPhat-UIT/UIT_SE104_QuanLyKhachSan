<UserControl 
    x:Class="QuanLyKhachSan.UI.Views.MainViews.BookingRoomWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views.MainViews"
    xmlns:behaviors="clr-namespace:QuanLyKhachSan.ViewModel.ScrollBehavior"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <Grid
            Background="White"
            x:Name="grdSideBar"
            Margin="0"
            Height="800"
            Width="256"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Ehotel"
                FontSize="42"
                FontFamily="pack://application:,,,/Resources/Fonts/#Lobster"
                Foreground="#1366D9"
                Cursor="Hand"
                Margin="0, 22, 0, 0"/>

            <StackPanel
                x:Name="spMenu"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="196"
                Margin="0">

                <ToggleButton 
                    Command="{Binding SidebarCommand.OverviewWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Tổng quan"
                    Tag="HomeOutline"
                    Cursor="Hand"/>

                <ToggleButton 
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Đặt phòng"
                    Tag="ShapePlusOutline"
                    Cursor="Hand"
                    IsChecked="True"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.RoomWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phòng"
                    Tag="BedOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.ReservationWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phiếu thuê"
                    Tag="TicketOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton
                    Command="{Binding SidebarCommand.RevenueWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Doanh thu"
                    Tag="ChartBellCurveCumulative"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.UserWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Nhân viên"
                    Tag="AccountGroupOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.SettingWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Thiết lập"
                    Tag="SettingsOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>
            </StackPanel>

        </Grid>

        <Grid
            x:Name="gridHome"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="800"
            Width="1024"
            Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid
                Background="White"
                x:Name="grdHeader"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="100"
                Width="1024">

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <materialDesign:PackIcon 
                        Kind="BellOutline"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="#5D6679"
                        Margin="0, 0, 14, 0"/>

                    <materialDesign:PackIcon 
                        Kind="EmailOutline"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="#5D6679"
                        Margin="0, 0, 32, 0"/>

                    <Border
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        CornerRadius="18"
                        Background="#A1C7FF"
                        Width="320"
                        Height="70"
                        Padding="12,8"
                        Margin="0,0,16,0"
                        Cursor="Hand">

                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Đăng xuất" Click="Logout_Click"/>
                                <MenuItem Header="Thay đổi mật khẩu" Click="ChangePassword_Click"/>
                            </ContextMenu>
                        </Border.ContextMenu>

                        <Grid>
                            <StackPanel
                                Orientation="Horizontal">

                                <Ellipse 
                                    Width="52" 
                                    Height="52"
                                    VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="pack://application:,,,/Resources/Images/user.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <StackPanel
                                    VerticalAlignment="Center"
                                    Margin="16, 0, 0, 0">

                                    <TextBlock 
                                        Text="{Binding User.UserRole}"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="SemiBold"/>

                                    <TextBlock 
                                        Text="{Binding User.UserEmail}"
                                        VerticalAlignment="Center"
                                        FontSize="16"    
                                        FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>

                            <Popup x:Name="ChangePasswordPopup"
                                PlacementTarget="{Binding ElementName=ChangePasswordMenuItem}"
                                Placement="Bottom"
                                StaysOpen="False"
                                AllowsTransparency="True">
                                <Border Background="White"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="10"
                                    Effect="{StaticResource MaterialDesignShadowDepth2}">
                                    <StackPanel>
                                        <TextBlock Text="Nhập mật khẩu mới:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="0,0,0,10"/>
                                        <Button Content="Cập nhật" Click="UpdatePassword_Click" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>
                            </Popup>

                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="grdBody"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="700"
                Width="1024"
                Background="#DFDFDF">

                <StackPanel
                    x:Name="spBody"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="700"
                    Width="1024">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0">

                            <Border
                                Width="530"
                                Height="300"
                                CornerRadius="12"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Background="#FFFFFF"
                                Padding="42, 24"
                                Margin="16, 24, 0, 0">

                                <StackPanel>
                                    <ScrollViewer 
                                        VerticalScrollBarVisibility="Hidden"
                                        HorizontalScrollBarVisibility="Hidden"
                                        behaviors:HorizontalScrollOnMouseWheelBehavior.EnableHorizontalScroll="True">
                                        <ItemsControl ItemsSource="{Binding LoadRoomButtons}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <ToggleButton
                                                        Style="{StaticResource OutlinedToggleButtonStyle}"
                                                        Content="{Binding Label}"
                                                        IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                        Command="{Binding Command}"
                                                        CommandParameter="{Binding Label}"
                                                        Margin="0, 0, 8, 0"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <Grid
                                        Margin="0, 16, 0, 0">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Column="0">
                                            <TextBlock
                                                Text="Check in"
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Foreground="#383E49"/>

                                            <Border
                                                Width="200"
                                                Height="35"
                                                HorizontalAlignment="Left"
                                                Background="Transparent"
                                                BorderBrush="#8A858D9D"
                                                BorderThickness="1"
                                                Padding="8, 0"
                                                CornerRadius="8"
                                                Margin="0, 8, 0, 0">

                                                <DatePicker
                                                    SelectedDate="{Binding Reservation.CheckIn, Mode=TwoWay}"
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                                    materialDesign:HintAssist.Hint="Select a date"
                                                    FontSize="14"
                                                    BorderThickness="0"
                                                    VerticalContentAlignment="Center"/>
                                            </Border>

                                        </StackPanel>

                                        <StackPanel
                                            Grid.Column="1"
                                            HorizontalAlignment="Right">
                                            <TextBlock
                                                Text="Check out"
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Foreground="#383E49"/>

                                            <Border
                                                Width="200"
                                                Height="35"
                                                HorizontalAlignment="Left"
                                                Background="Transparent"
                                                BorderBrush="#8A858D9D"
                                                BorderThickness="1"
                                                Padding="8, 0"
                                                CornerRadius="8"
                                                Margin="0, 8, 0, 0">

                                                <DatePicker
                                                    SelectedDate="{Binding Reservation.CheckOut, Mode=TwoWay}"
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                                    materialDesign:HintAssist.Hint="Select a date"
                                                    FontSize="14"
                                                    BorderThickness="0"
                                                    VerticalContentAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>

                                    <Grid
                                    Margin="0, 20, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Column="0"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Text="Người lớn"
                                                FontSize="14"
                                                FontWeight="Medium"
                                                VerticalAlignment="Center"
                                                Margin="0, 0, 16, 0"/>

                                            <Button
                                                Command="{Binding AdultsDecrease}"
                                                Width="36" 
                                                Height="36"
                                                VerticalAlignment="Center"  
                                                Background="#E8F1FD"
                                                Cursor="Hand">
                                                <materialDesign:PackIcon 
                                                    Kind="Minus" 
                                                    Width="20" 
                                                    Height="20" 
                                                    Foreground="#1570EF"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="20">  
                                                            <ContentPresenter 
                                                                HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <TextBlock 
                                                Text="{Binding Adults}"
                                                FontSize="18"
                                                FontWeight="Medium"
                                                VerticalAlignment="Center"
                                                Margin="16, 0, 16, 0"/>

                                            <Button
                                                Command="{Binding AdultsIncrease}"
                                                Width="36" 
                                                Height="36"
                                                VerticalAlignment="Center"  
                                                Background="#E8F1FD"
                                                Cursor="Hand">
                                                <materialDesign:PackIcon 
                                                    Kind="Plus" 
                                                    Width="20" 
                                                    Height="20" 
                                                    Foreground="#1570EF"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="20">
                                                            <ContentPresenter 
                                                                HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Column="1"
                                            Orientation="Horizontal"
                                            Margin="24, 0, 0, 0">

                                            <TextBlock
                                                Text="Trẻ em"
                                                FontSize="14"
                                                FontWeight="Medium"
                                                VerticalAlignment="Center"
                                                Margin="0, 0, 16, 0"/>

                                            <Button
                                                Command="{Binding KidsDecrease}"
                                                Width="36" 
                                                Height="36"
                                                VerticalAlignment="Center"  
                                                Background="#E8F1FD"
                                                Cursor="Hand">
                                                <materialDesign:PackIcon 
                                                    Kind="Minus" 
                                                    Width="20" 
                                                    Height="20" 
                                                    Foreground="#1570EF"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="20">
                                                            <ContentPresenter 
                                                                HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <TextBlock
                                                Text="{Binding Kids}"
                                                FontSize="18"
                                                FontWeight="Medium"
                                                VerticalAlignment="Center"
                                                Margin="16, 0, 16, 0"/>

                                            <Button
                                                Command="{Binding KidsIncrease}"
                                                Width="36" 
                                                Height="36"
                                                VerticalAlignment="Center"  
                                                Background="#E8F1FD"
                                                Cursor="Hand">
                                                <materialDesign:PackIcon 
                                                    Kind="Plus" 
                                                    Width="20" 
                                                    Height="20" 
                                                    Foreground="#1570EF"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="20">
                                                            <ContentPresenter 
                                                                HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                </StackPanel>
                            </Border>

                            <DataGrid 
                                Background="#FFFFFF"
                                Width="530"
                                Height="300"                                
                                materialDesign:DataGridAssist.CornerRadius="12"
                                ItemsSource="{Binding Rooms}"
                                SelectedItem="{Binding SelectedRoom}"
                                SelectionUnit="FullRow"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                HeadersVisibility="Column"
                                RowHeight="50"
                                ColumnWidth="*"
                                IsReadOnly="True"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                Margin="16, 24, 0, 0">

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Số phòng" Binding="{Binding RoomNumber}" Width="Auto"/>
                                    <DataGridTextColumn Header="Loại phòng" Binding="{Binding RoomTierName}" Width="*"/>
                                    <DataGridTextColumn Header="Giá" Binding="{Binding PricePerDay, StringFormat={}{0:N0}}" Width="*"/>
                                    <DataGridTextColumn Header="Cơ sở vật chất" Binding="{Binding Amenity}" Width="2*">
                                        <DataGridTextColumn.CellStyle>
                                            <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="ToolTip" Value="{Binding Amenity}"/>
                                            </Style>
                                        </DataGridTextColumn.CellStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <Border 
                            Grid.Column="1"
                            Background="White" 
                            CornerRadius="12" 
                            Width="440"
                            HorizontalAlignment="Right"
                            Margin="0, 24, 16, 0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border
                                    Grid.Row="0"
                                    Width="440"
                                    Height="56"
                                    Background="#1570EF"
                                    CornerRadius="12 12 0 0">
                                    <TextBlock 
                                        Text="Hóa Đơn" 
                                        FontSize="22" 
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>

                                <ScrollViewer 
                                    Grid.Row="1"
                                    Width="408"
                                    Padding="0, 16"
                                    HorizontalAlignment="Center"
                                    VerticalScrollBarVisibility="Hidden">
                                    <StackPanel>
                                        <StackPanel Margin="0,0,0,12">

                                            <TextBlock
                                                Text="Phòng "
                                                FontSize="22" 
                                                FontWeight="Medium">
                                                <Run Text="{Binding SelectedRoom.RoomNumber}" FontSize="22" FontWeight="Medium"/>
                                            </TextBlock>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock 
                                                    Grid.Column="0" 
                                                    HorizontalAlignment="Left"
                                                    Text="Loại phòng: " 
                                                    FontSize="20" FontWeight="Medium">
                                                    <Run Text="{Binding SelectedRoom.RoomTierName}" FontSize="20" FontWeight="Medium"/>
                                                </TextBlock>

                                                <TextBlock 
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    Text="{Binding SelectedRoom.PricePerDay, StringFormat={}{0:N0}}" 
                                                    FontSize="20" FontWeight="Medium"/>
                                            </Grid>

                                            <TextBlock FontSize="18" FontWeight="Medium">
                                                <Run Text="{Binding CustomersCount, Mode=OneWay}"></Run>
                                                <Run Text="người, "></Run>
                                                <Run Text="{Binding Reservation.Nights, Mode=OneWay}"></Run>
                                                <Run Text="đêm"></Run>
                                            </TextBlock>

                                            <Separator Margin="0 8 0 0" Background="#DDD"/>

                                        </StackPanel>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock 
                                                Text="Khách "
                                                Grid.Column="0"
                                                FontSize="22" FontWeight="Medium"/>
                                            <Button
                                                Grid.Column="1"
                                                Command="{Binding CustomerAdd}"
                                                Width="30" 
                                                Height="30"
                                                VerticalAlignment="Center"  
                                                Background="#E8F1FD"
                                                Cursor="Hand">
                                                <materialDesign:PackIcon 
                                                    Kind="Plus" 
                                                    Width="20" 
                                                    Height="20" 
                                                    Foreground="#1570EF"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="20">
                                                            <ContentPresenter 
                                                                HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                        <ItemsControl ItemsSource="{Binding Customers}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,0,0,12">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            Text="{Binding CustomerName}" 
                                                            FontSize="22" 
                                                            FontWeight="Medium"/>

                                                        <TextBlock
                                                            Grid.Column="1"
                                                            HorizontalAlignment="Right"
                                                            Text="{Binding IdentityNumber}" 
                                                            FontSize="20" 
                                                            FontWeight="Medium"/>

                                                        <Button
                                                            Grid.Column="2"
                                                            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.CustomerDelete}"
                                                            CommandParameter="{Binding}"
                                                            Width="30" 
                                                            Height="30"
                                                            Margin="8,0,0,0"
                                                            VerticalAlignment="Center"  
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Cursor="Hand">
                                                            <materialDesign:PackIcon 
                                                                Kind="Delete" 
                                                                Width="20" 
                                                                Height="20" 
                                                                Foreground="Red"/>
                                                            <Button.Template>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border 
                                                                        Background="{TemplateBinding Background}" 
                                                                        CornerRadius="20">
                                                                        <ContentPresenter 
                                                                            HorizontalAlignment="Center" 
                                                                            VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <Separator Margin="0 8 0 0" Background="#DDD"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock 
                                                Grid.Column="0" 
                                                Text="Phụ thu: " 
                                                FontSize="20" 
                                                FontWeight="Medium"/>
                                            <TextBlock 
                                                Grid.Column="1" 
                                                HorizontalAlignment="Right"
                                                Text="{Binding Invoice.SurchargeRate, Mode=TwoWay}" 
                                                FontSize="20" 
                                                FontWeight="Medium"/>
                                        </Grid>

                                        <Separator Margin="0 8 0 0" Background="#DDD"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock 
                                                Grid.Column="0" 
                                                Text="Hệ số: " 
                                                FontSize="20" 
                                                FontWeight="Medium"/>
                                            <TextBlock 
                                                Grid.Column="1" 
                                                HorizontalAlignment="Right"
                                                Text="{Binding Invoice.Coef, Mode=TwoWay}" 
                                                FontSize="20" 
                                                FontWeight="Medium"/>
                                        </Grid>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock 
                                                Grid.Column="0" 
                                                Text="Có khách nước ngoài" 
                                                FontSize="20" 
                                                FontWeight="Medium"/>
                                            <CheckBox
                                                Command="{Binding Checked}"
                                                CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"
                                                Grid.Column="1"
                                                HorizontalAlignment="Center"
                                                />
                                            <!--<TextBlock 
                                                Grid.Column="1" 
                                                HorizontalAlignment="Right"
                                                Text="{Binding Invoice.Coef, Mode=TwoWay}" 
                                                FontSize="20" 
                                                FontWeight="Medium"/>-->
                                        </Grid>

                                    </StackPanel>
                                </ScrollViewer>

                                <StackPanel 
                                    Grid.Row="2"
                                    Margin="0 16 16 22" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                                    <TextBlock Text="Tổng: " FontWeight="Bold" FontSize="20"/>
                                    <TextBlock Text="{Binding Invoice.Total, Mode=TwoWay, StringFormat={}{0:N0}}" FontSize="20"/>
                                </StackPanel>

                                <Button
                                    Command="{Binding Save}"
                                    Grid.Row="3"
                                    Style="{DynamicResource BlueButtonStyle}"
                                    Width="200"
                                    Height="50"
                                    Cursor="Hand"
                                    Margin="0, 0, 0, 16">
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="28"
                                            Height="28"
                                            VerticalAlignment="Center"
                                            Kind="BookmarkOutline"/>
                                        <TextBlock
                                            Text="Lưu"
                                            FontSize="20"
                                            VerticalAlignment="Center"
                                            Margin="4, 0, 0, 0"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
