<UserControl x:Class="QuanLyKhachSan.UI.Views.MainViews.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views.MainViews"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <Grid
            Background="White"
            x:Name="grdSideBar"
            Margin="0"
            Height="800"
            Width="256"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Ehotel"
                FontSize="42"
                FontFamily="pack://application:,,,/Resources/Fonts/#Lobster"
                Foreground="#1366D9"
                Cursor="Hand"
                Margin="0, 22, 0, 0"/>

            <StackPanel
                x:Name="spMenu"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="196"
                Margin="0">

                <ToggleButton 
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Tổng quan"
                    Tag="HomeOutline"
                    Cursor="Hand"/>

                <ToggleButton
                    Command="{Binding SidebarCommand.BookingWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Đặt phòng"
                    Tag="ShapePlusOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.RoomWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phòng"
                    Tag="BedOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.ReservationWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phiếu thuê"
                    Tag="TicketOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.RevenueWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Doanh thu"
                    Tag="ChartBellCurveCumulative"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.UserWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Nhân viên"
                    Tag="AccountGroupOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.UserWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Thiết lập"
                    Tag="SettingsOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"
                    IsChecked="True"/> 
            </StackPanel>

        </Grid>

        <Grid
            x:Name="gridHome"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="800"
            Width="1024"
            Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid
                Background="White"
                x:Name="grdHeader"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="100"
                Width="1024">

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <materialDesign:PackIcon 
                        Kind="BellOutline"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="#5D6679"
                        Margin="0, 0, 14, 0"/>

                    <materialDesign:PackIcon 
                        Kind="EmailOutline"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="#5D6679"
                        Margin="0, 0, 32, 0"/>

                    <Border
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        CornerRadius="18"
                        Background="#A1C7FF"
                        Width="320"
                        Height="70"
                        Padding="12,8"
                        Margin="0,0,16,0"
                        Cursor="Hand">
                        <StackPanel
                            Orientation="Horizontal">

                            <Ellipse 
                                Width="52" 
                                Height="52"
                                VerticalAlignment="Center">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Resources/Images/user.png"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <StackPanel
                                VerticalAlignment="Center"
                                Margin="16, 0, 0, 0">

                                <TextBlock 
                                    Text="{Binding User.UserRole}"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="SemiBold"/>

                                <TextBlock 
                                    Text="{Binding User.UserEmail}"
                                    VerticalAlignment="Center"
                                    FontSize="16"    
                                    FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>


            </Grid>

            <Grid
                x:Name="grdBody"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="700"
                Width="1024"
                Background="#DFDFDF">

                <StackPanel
                    x:Name="spBody"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="700"
                    Width="1024">


                    <Grid HorizontalAlignment="Center" 
                          Width="992" 
                          Margin="0, 24, 0, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border
                                Grid.Row="0"
                                Background="#1570EF"
                                CornerRadius="12, 12, 0, 0"
                                Height="50">
                            <TextBlock
                                    Text="Danh sách phòng"
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Foreground="White"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="20, 0, 0, 0"/>
                        </Border>

                        <Border
                                Grid.Row="1"
                                Background="White"
                                CornerRadius="0, 0, 12, 12"
                                Padding="16, 8">

                            <StackPanel>
                                <Grid Margin="0, 0, 0, 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock 
                                        Grid.Column="0" 
                                        Text="Tên loại phòng" 
                                        FontSize="14" 
                                        FontWeight="Medium" 
                                        VerticalAlignment="Center"/>
                                    <TextBlock 
                                        Grid.Column="1" 
                                        Text="Giá tiền" 
                                        FontSize="14" 
                                        FontWeight="Medium" 
                                        VerticalAlignment="Center" 
                                        Margin="100, 0, 0, 0"/>
                                </Grid>

                                <Separator Background="#E0E0E0" Margin="0, 5"/>

                                <Grid Margin="0, 15, 0, 15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock 
                                        Grid.Column="0" 
                                        Text="VIP" 
                                        FontSize="14" 
                                        VerticalAlignment="Center"/>
                                    <TextBlock 
                                        Grid.Column="1" 
                                        Text="1000" 
                                        FontSize="14" 
                                        VerticalAlignment="Center"  
                                        Margin="110, 0, 0, 0"/>
                                    <materialDesign:PackIcon Grid.Column="2" Kind="DotsVertical" Width="20" Height="20" Foreground="#5D6679" Cursor="Hand"/>
                                </Grid>

                                <Separator Background="#F0F0F0" Margin="0, 5"/>

                                <Grid Margin="0, 15, 0, 15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock 
                                        Grid.Column="0" 
                                        Text="Phòng đôi" 
                                        FontSize="14" 
                                        VerticalAlignment="Center"/>
                                    <TextBlock 
                                        Grid.Column="1" 
                                        Text="1000" 
                                        FontSize="14" 
                                        VerticalAlignment="Center" 
                                        Margin="110, 0, 0, 0"/>
                                    <materialDesign:PackIcon Grid.Column="2" Kind="DotsVertical" Width="20" Height="20" Foreground="#5D6679" Cursor="Hand"/>
                                </Grid>

                                <Separator Background="#F0F0F0" Margin="0, 5"/>

                                <Grid Margin="0, 15, 0, 15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock 
                                        Grid.Column="0" 
                                        Text="Phòng đơn" 
                                        FontSize="14" 
                                        VerticalAlignment="Center"/>
                                    <TextBlock 
                                        Grid.Column="1" 
                                        Text="1000" 
                                        FontSize="14" 
                                        VerticalAlignment="Center" 
                                        Margin="110, 0, 0, 0"/>
                                    <materialDesign:PackIcon Grid.Column="2" Kind="DotsVertical" Width="20" Height="20" Foreground="#5D6679" Cursor="Hand"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid
                        HorizontalAlignment="Center"
                        Margin="0, 48, 0, 0"
                        Width="992">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.7*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border
                                    Grid.Row="0"
                                    Background="#1570EF"
                                    CornerRadius="12, 12, 0, 0"
                                    Height="50">
                                <TextBlock
                                        Text="Danh sách khách hàng"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Foreground="White"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="16, 0, 0, 0"/>
                            </Border>

                            <Border
                                    Grid.Row="1"
                                    Background="White"
                                    CornerRadius="0, 0, 12, 12"
                                    Padding="16, 8">

                                <StackPanel>
                                    <Grid Margin="0, 0, 0, 8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock 
                                            Grid.Column="0" 
                                            Text="Tên loại khách hàng" 
                                            FontSize="14" 
                                            FontWeight="Medium" 
                                            VerticalAlignment="Center"/>
                                    </Grid>

                                    <Separator Background="#E0E0E0" Margin="0, 4"/>

                                    <Grid Margin="0, 12, 0, 12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock 
                                            Grid.Column="0" 
                                            Text="Nước ngoài" 
                                            FontSize="14" 
                                            VerticalAlignment="Center"/>
                                        <materialDesign:PackIcon Grid.Column="1" Kind="DotsVertical" Width="16" Height="16" Foreground="#5D6679" Cursor="Hand"/>
                                    </Grid>

                                    <Separator Background="#F0F0F0" Margin="0, 4"/>

                                    <Grid Margin="0, 12, 0, 12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock 
                                            Grid.Column="0" 
                                            Text="Nội địa" 
                                            FontSize="14" 
                                            VerticalAlignment="Center"/>
                                        <materialDesign:PackIcon Grid.Column="1" Kind="DotsVertical" Width="16" Height="16" Foreground="#5D6679" Cursor="Hand"/>
                                    </Grid>

                                    <Separator Background="#F0F0F0" Margin="0, 4"/>

                                    <Grid Margin="0, 12, 0, 12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock 
                                            Grid.Column="0" 
                                            Text="ABC" 
                                            FontSize="14" 
                                            VerticalAlignment="Center"/>
                                        <materialDesign:PackIcon Grid.Column="1" Kind="DotsVertical" Width="16" Height="16" Foreground="#5D6679" Cursor="Hand"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <Grid Grid.Column="1"
                              Margin="32, 0, 0, 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Background="#1570EF"
                                CornerRadius="12, 12, 0, 0"
                                Height="50"> 
                                <TextBlock
                                    Text="Danh sách phụ thu"
                                    FontSize="16"
                                    FontWeight="Medium"
                                    Foreground="White"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="16, 0, 0, 0"/> 
                            </Border>

                            <Border
                                Grid.Row="1"
                                Background="White"
                                CornerRadius="0, 0, 12, 12"
                                Padding="16">

                                <StackPanel>
                                    <Grid Margin="0, 8, 0, 8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock 
                                            Grid.Column="0" 
                                            Text="Tỉ lệ phụ thu (%)" 
                                            FontSize="14" 
                                            FontWeight="Medium" 
                                            VerticalAlignment="Center"/>
                                        
                                        <TextBlock 
                                            Grid.Column="1" 
                                            Text="10" FontSize="14" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                        
                                        <TextBlock 
                                            Grid.Column="2" 
                                            Text="5" 
                                            FontSize="14" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                        
                                        <TextBlock 
                                            Grid.Column="3" 
                                            Text="8" 
                                            FontSize="14" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                        <materialDesign:PackIcon Grid.Column="4" Kind="DotsVertical" Width="16" Height="16" Foreground="#5D6679" Cursor="Hand"/>
                                    </Grid>

                                    <Separator Background="#E0E0E0" Margin="0, 4"/>

                                    <Grid Margin="0, 12, 0, 12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock 
                                            Grid.Column="0" 
                                            Text="Khách tối đa / phòng" 
                                            FontSize="14" 
                                            FontWeight="Medium" 
                                            VerticalAlignment="Center"/>
                                        
                                        <TextBlock 
                                            Grid.Column="1" 
                                            Text="2" 
                                            FontSize="14" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                        
                                        <TextBlock 
                                            Grid.Column="2" 
                                            Text="2" 
                                            FontSize="14" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                        
                                        <TextBlock 
                                            Grid.Column="3" 
                                            Text="2" 
                                            FontSize="14" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                        <materialDesign:PackIcon Grid.Column="4" Kind="DotsVertical" Width="16" Height="16" Foreground="#5D6679" Cursor="Hand"/>
                                    </Grid>

                                    <Separator Background="#F0F0F0" Margin="0, 4"/>

                                    <Grid Margin="0, 12, 0, 12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock 
                                            Grid.Column="0" 
                                            Text="Áp dụng từ khách thứ" 
                                            FontSize="14" 
                                            FontWeight="Medium" 
                                            VerticalAlignment="Center"/>
                                        
                                        <TextBlock 
                                            Grid.Column="1" 
                                            Text="2" 
                                            FontSize="14" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                        
                                        <TextBlock 
                                            Grid.Column="2" 
                                            Text="2" 
                                            FontSize="14" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                        
                                        <TextBlock 
                                            Grid.Column="3" 
                                            Text="2" 
                                            FontSize="14" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"/>
                                        <materialDesign:PackIcon Grid.Column="4" Kind="DotsVertical" Width="16" Height="16" Foreground="#5D6679" Cursor="Hand"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
