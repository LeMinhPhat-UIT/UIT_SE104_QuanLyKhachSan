<UserControl 
    x:Class="QuanLyKhachSan.UI.Views.MainViews.RevenueWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views.MainViews"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:QuanLyKhachSan.ViewModel.ScrollBehavior"
    mc:Ignorable="d"
    Height="800" 
    Width="1280"> 
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <Grid
            Background="White"
            x:Name="grdSideBar"
            Margin="0"
            Height="800"
            Width="256"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="Ehotel"
                FontSize="42"
                FontFamily="pack://application:,,,/Resources/Fonts/#Lobster"
                Foreground="#1366D9"
                Cursor="Hand"
                Margin="0, 22, 0, 0"/>

            <StackPanel
                x:Name="spMenu"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="196"
                Margin="0">

                <ToggleButton 
                    Command="{Binding SidebarCommand.OverviewWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Tổng quan"
                    Tag="HomeOutline"
                    Cursor="Hand"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.BookingWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Đặt phòng"
                    Tag="ShapePlusOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.RoomWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phòng"
                    Tag="BedOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.ReservationWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phiếu thuê"
                    Tag="TicketOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Doanh thu"
                    Tag="ChartBellCurveCumulative"
                    Cursor="Hand"
                    IsChecked="True"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.UserWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Nhân viên"
                    Tag="AccountGroupOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Command="{Binding SidebarCommand.SettingWindow}"
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Thiết lập"
                    Tag="SettingsOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/> 
            </StackPanel>

        </Grid>

        <Grid
            x:Name="gridHome"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="800"
            Width="1024"
            Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid
                Background="White"
                x:Name="grdHeader"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="100"
                Width="1024">

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <materialDesign:PackIcon 
                        x:Name="iconNotification"
                        Kind="BellOutline"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Foreground="#5D6679"
                        Cursor="Hand"
                        Margin="0, 0, 14, 0"/>

                    <materialDesign:PackIcon 
                        x:Name="iconMail"
                        Kind="EmailOutline"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="#5D6679"
                        Margin="0, 0, 32, 0"/>

                    <Border
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        CornerRadius="18"
                        Background="#A1C7FF"
                        Width="320"
                        Height="70"
                        Padding="12,8"
                        Margin="0,0,16,0"
                        Cursor="Hand">

                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Đăng xuất" Click="Logout_Click"/>
                                <MenuItem Header="Thay đổi mật khẩu" Click="ChangePassword_Click"/>
                            </ContextMenu>
                        </Border.ContextMenu>

                        <Grid>
                            <StackPanel
                                Orientation="Horizontal">

                                <Ellipse 
                                    Width="52" 
                                    Height="52"
                                    VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="pack://application:,,,/Resources/Images/user.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <StackPanel
                                    VerticalAlignment="Center"
                                    Margin="16, 0, 0, 0">

                                    <TextBlock 
                                        Text="{Binding User.UserRole}"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="SemiBold"/>

                                    <TextBlock 
                                        Text="{Binding User.UserEmail}"
                                        VerticalAlignment="Center"
                                        FontSize="16"    
                                        FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>

                            <Popup x:Name="ChangePasswordPopup"
                                
                                Placement="Bottom"
                                StaysOpen="False"
                                AllowsTransparency="True">
                                <Border Background="White"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="10"
                                    Effect="{StaticResource MaterialDesignShadowDepth2}">
                                    <StackPanel>
                                        <TextBlock Text="Nhập mật khẩu mới:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="0,0,0,10"/>
                                        <Button Content="Cập nhật" Click="UpdatePassword_Click" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid
                x:Name="grdBody"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="700"
                Width="1024"
                Background="#DFDFDF">

                <StackPanel
                    x:Name="spBody"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="700"
                    Width="1024">

                    <Grid
                        Margin="16, 24, 16, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border
                            Grid.Column="0"
                            Width="440"
                            Height="300"
                            HorizontalAlignment="Left"
                            CornerRadius="12"
                            Padding="16, 32"
                            Background="White">

                            <Grid
                                Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" HorizontalAlignment="Right" Width="196">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Text="Doanh thu (%)"
                                        FontSize="20"
                                        FontWeight="SemiBold"/>

                                    <ComboBox
                                        Grid.Row="1"
                                        ItemsSource="{Binding ChartView}"
                                        SelectedItem="{Binding SelectedPieChartView}"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                        materialDesign:HintAssist.Hint="Tháng"
                                        Width="80"
                                        HorizontalAlignment="Left"
                                        FontSize="16"
                                        Margin="0, 8, 0, 0">
                                        <behavior:Interaction.Triggers>
                                            <behavior:EventTrigger EventName="DropDownClosed">
                                                <behavior:InvokeCommandAction 
                                                    Command="{Binding PieChartViewChanged}" />
                                            </behavior:EventTrigger>
                                        </behavior:Interaction.Triggers>
                                    </ComboBox>

                                    <ScrollViewer
                                        Grid.Row="2"
                                        VerticalScrollBarVisibility="Hidden">
                                        <ItemsControl
                                            ItemsSource="{Binding PieChartItems}"
                                            Margin="0,32,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0, 8, 0, 0">
                                                        <Border
                                                            Width="50"
                                                            Height="25"
                                                            Background="{Binding Brush}"
                                                            CornerRadius="8"/>
                                                        <TextBlock
                                                            Text="{Binding Tier.RoomTierName}"
                                                            FontSize="18"
                                                            FontWeight="Regular"
                                                            Foreground="#747474"
                                                            Margin="16, 0, 0, 0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>

                                <lvc:PieChart
                                    Grid.Column="1" 
                                    Series="{Binding PieChart}" 
                                    LegendPosition="Hidden"/>
                            </Grid>
                        </Border>

                        <Border
                            Grid.Column="1"
                            Width="540"
                            Height="300"
                            HorizontalAlignment="Right"
                            CornerRadius="12"
                            Padding="16"
                            Background="White">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Text="Doanh thu qua các tháng"
                                    FontSize="20"
                                    FontWeight="Medium"
                                    HorizontalAlignment="Center"/>

                                <lvc:CartesianChart 
                                    Grid.Row="1" 
                                    Padding="0, 16" 
                                    Series="{Binding ColumnChart}" 
                                    XAxes="{Binding ColumnXAxis}"
                                    YAxes="{Binding ColumnYAxis}"
                                    TooltipPosition="Hidden"
                                    LegendPosition="Hidden"
                                    Background="White" 
                                    ZoomMode="None"
                                    DrawMarginFrame="{x:Null}"/>

                                <!--<TextBlock
                                    Grid.Row="2"
                                    HorizontalAlignment="Center"
                                    Text="Tháng này doanh thu đã tăng 30%"
                                    FontSize="20"
                                    FontWeight="Regular"
                                    Foreground="#000000"/>-->
                            </Grid>
                        </Border>

                    </Grid>

                    <Grid
                        Margin="16, 28, 16, 24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border
                            Grid.Column="0"
                            Width="640"
                            Height="330"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            CornerRadius="12"
                            Padding="16"
                            Background="White">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel
                                    Grid.Row="0">

                                    <StackPanel
                                        Orientation="Horizontal">

                                        <TextBlock
                                            Text="Doanh thu theo phòng"
                                            FontSize="18"
                                            FontWeight="Medium"/>

                                        <!--<ComboBox
                                            ItemsSource="{Binding ChartView}"
                                            SelectedItem="{Binding SelectedLineChartView}"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                            materialDesign:HintAssist.Hint="Năm"
                                            Width="100"
                                            FontSize="16"
                                            Margin="320, 0, 0, 0">
                                            <behavior:Interaction.Triggers>
                                                <behavior:EventTrigger EventName="DropDownClosed">
                                                    <behavior:InvokeCommandAction 
                                                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.SelectedChanged}" />
                                                </behavior:EventTrigger>
                                            </behavior:Interaction.Triggers>
                                        </ComboBox>-->
                                    </StackPanel>

                                    <TextBlock
                                        FontSize="24"
                                        FontWeight="Regular"
                                        Foreground="#165BAA">
                                        <Run Text="{Binding ReservationCount}" />
                                        <Run Text=" lượt đặt" />
                                    </TextBlock>
                                </StackPanel>

                                <lvc:CartesianChart
                                    Grid.Row="1"
                                    Series="{Binding LineChart}"
                                    XAxes="{Binding LineXAxis}"
                                    
                                    LegendPosition="Hidden"
                                    DrawMarginFrame="{x:Null}"
                                    Background="White"
                                    Padding="0, 16"
                                    ZoomMode="None"/>

                                <Grid Grid.Row="2">

                                    <ScrollViewer
                                        VerticalScrollBarVisibility="Hidden"
                                        HorizontalScrollBarVisibility="Hidden"
                                        behaviors:HorizontalScrollOnMouseWheelBehavior.EnableHorizontalScroll="True">
                                        <ItemsControl
                                            ItemsSource="{Binding PieChartItems}"
                                            Margin="16,0,0,0">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0, 8, 0, 0">
                                                        <Border
                                                            Width="16"
                                                            Height="16"
                                                            Background="{Binding Brush}"
                                                            CornerRadius="8"/>
                                                        <TextBlock
                                                            Text="{Binding Tier.RoomTierName}"
                                                            FontSize="18"
                                                            FontWeight="Regular"
                                                            Foreground="#747474"
                                                            Margin="16, 0, 16, 0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                    
                                </Grid>
                            </Grid>

                        </Border>

                        <Border
                            Grid.Column="1"
                            Width="340"
                            Height="330"
                            HorizontalAlignment="Right"
                            CornerRadius="12"
                            Padding="24"
                            Background="White">

                            <StackPanel>
                                <TextBlock
                                    Text="Doanh thu (VNĐ)"
                                    FontSize="22"
                                    FontWeight="SemiBold"/>

                                <ComboBox
                                    ItemsSource="{Binding ChartView}"
                                    SelectedItem="{Binding SelectedTotalRevenue}"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                    materialDesign:HintAssist.Hint="Tháng"
                                    Width="80"
                                    HorizontalAlignment="Left"
                                    FontSize="16"
                                    Margin="0, 8, 0, 0">
                                    <behavior:Interaction.Triggers>
                                        <behavior:EventTrigger EventName="DropDownClosed">
                                            <behavior:InvokeCommandAction 
                                                Command="{Binding TotalRevenueViewChanged}" />
                                        </behavior:EventTrigger>
                                    </behavior:Interaction.Triggers>
                                </ComboBox>

                                <Border
                                    Width="250"
                                    Height="80"
                                    CornerRadius="12"
                                    Margin="0, 52, 0, 0">

                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#1E74FF" Offset="0.2"/>
                                            <GradientStop Color="#AA94FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>

                                    <TextBlock
                                        Text="{Binding TotalRevenue, StringFormat={}{0:N0}}"
                                        FontSize="36"
                                        FontWeight="Medium"
                                        Foreground="White"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
