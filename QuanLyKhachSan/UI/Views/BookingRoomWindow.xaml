<Window x:Class="QuanLyKhachSan.UI.Views.BookingRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyKhachSan.UI.Views"
        mc:Ignorable="d"
        Title="BookingRoomWindow" 
        WindowStyle="None"
        Height="800" 
        Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <Grid
        x:Name="grdSideBar"
        Margin="0"
        Height="800"
        Width="256"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text="Ehotel"
            FontSize="42"
            FontFamily="pack://application:,,,/Resources/Fonts/#Lobster"
            Foreground="#1366D9"
            Cursor="Hand"
            Margin="0, 22, 0, 0"/>

            <StackPanel
            x:Name="spMenu"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="196"
            Margin="0">

                <ToggleButton 
                Style="{StaticResource SidebarToggleButtonStyle}" 
                Content="Tổng quan"
                Tag="HomeOutline"
                Cursor="Hand"/>

                <ToggleButton 
                Style="{StaticResource SidebarToggleButtonStyle}" 
                Content="Đặt phòng"
                Tag="ShapePlusOutline"
                Cursor="Hand"
                IsChecked="True"
                Margin="0, 8, 0, 0"/>

                <ToggleButton 
                Style="{StaticResource SidebarToggleButtonStyle}" 
                Content="Phòng"
                Tag="BedOutline"
                Cursor="Hand"
                Margin="0, 8, 0, 0"/>

                <ToggleButton 
                    Style="{StaticResource SidebarToggleButtonStyle}" 
                    Content="Phiếu thuê"
                    Tag="TicketOutline"
                    Cursor="Hand"
                    Margin="0, 8, 0, 0"/>

                <ToggleButton 
                Style="{StaticResource SidebarToggleButtonStyle}" 
                Content="Doanh thu"
                Tag="ChartBellCurveCumulative"
                Cursor="Hand"
                Margin="0, 8, 0, 0"/>

                <ToggleButton 
                Style="{StaticResource SidebarToggleButtonStyle}" 
                Content="Nhân viên"
                Tag="AccountGroupOutline"
                Cursor="Hand"
                Margin="0, 8, 0, 0"/>
            </StackPanel>

        </Grid>

        <Grid
        x:Name="gridHome"
        Grid.Column="1"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Height="800"
        Width="1024"
        Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid
            x:Name="grdHeader"
            Grid.Row="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="100"
            Width="1024">

                <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">

                    <materialDesign:PackIcon 
                    Kind="BellOutline"
                    Width="32"
                    Height="32"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    Foreground="#5D6679"
                    Margin="0, 0, 14, 0"/>

                    <materialDesign:PackIcon 
                    Kind="EmailOutline"
                    Width="32"
                    Height="32"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    Foreground="#5D6679"
                    Margin="0, 0, 32, 0"/>

                    <Border
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    CornerRadius="18"
                    Background="#A1C7FF"
                    Width="320"
                    Height="70"
                    Padding="12,8"
                    Margin="0,0,16,0"
                    Cursor="Hand">
                        <StackPanel
                            Orientation="Horizontal">

                            <Ellipse 
                                Width="52" 
                                Height="52"
                                VerticalAlignment="Center">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Resources/Images/meomeo.webp"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <StackPanel
                                VerticalAlignment="Center"
                                Margin="16, 0, 0, 0">

                                <TextBlock 
                                    Text="Adminstrator:"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="SemiBold"/>

                                <TextBlock 
                                    Text="user@example.com"
                                    VerticalAlignment="Center"
                                    FontSize="16"    
                                    FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid
            x:Name="grdBody"
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="700"
            Width="1024"
            Background="#DFDFDF">

                <StackPanel
                x:Name="spBody"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="700"
                Width="1024">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0">

                            <Border
                            Width="530"
                            Height="300"
                            CornerRadius="12"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Background="#FFFFFF"
                            Padding="42, 24"
                            Margin="16, 24, 0, 0">

                                <StackPanel>
                                    <StackPanel
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left">

                                        <ToggleButton
                                        Style="{StaticResource OutlinedToggleButtonStyle}"
                                        Content="Tất cả"
                                        IsChecked="True"
                                        Margin="0, 0, 8, 0"/>

                                        <ToggleButton
                                        Style="{StaticResource OutlinedToggleButtonStyle}"
                                        Content="Đơn"
                                        Margin="0, 0, 8, 0"/>

                                        <ToggleButton
                                        Style="{StaticResource OutlinedToggleButtonStyle}"
                                        Content="Đôi"
                                        Margin="0, 0, 8, 0"/>

                                        <ToggleButton
                                        Style="{StaticResource OutlinedToggleButtonStyle}"
                                        Content="Ba"
                                        Margin="0, 0, 8, 0"/>

                                        <ToggleButton
                                        Style="{StaticResource OutlinedToggleButtonStyle}"
                                        Content="VIP"
                                        Margin="0, 0, 8, 0"/>
                                    </StackPanel>

                                    <Grid
                                    Margin="0, 16, 0, 0">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                        Grid.Column="0">
                                            <TextBlock
                                            Text="Check in"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="#383E49"/>

                                            <Border
                                                Width="200"
                                                Height="35"
                                                HorizontalAlignment="Left"
                                                Background="Transparent"
                                                BorderBrush="#8A858D9D"
                                                BorderThickness="1"
                                                Padding="8, 0"
                                                CornerRadius="8"
                                                Margin="0, 8, 0, 0">

                                                <DatePicker
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                                    materialDesign:HintAssist.Hint="Select a date"
                                                    FontSize="14"
                                                    BorderThickness="0"
                                                    VerticalContentAlignment="Center"/>
                                            </Border>

                                        </StackPanel>

                                        <StackPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Right">
                                            <TextBlock
                                        Text="Check in"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="#383E49"/>

                                            <Border
                                                Width="200"
                                                Height="35"
                                                HorizontalAlignment="Left"
                                                Background="Transparent"
                                                BorderBrush="#8A858D9D"
                                                BorderThickness="1"
                                                Padding="8, 0"
                                                CornerRadius="8"
                                                Margin="0, 8, 0, 0">

                                                <DatePicker
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                                    materialDesign:HintAssist.Hint="Select a date"
                                                    FontSize="14"
                                                    BorderThickness="0"
                                                    VerticalContentAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>

                                    <Grid
                                    Margin="0, 20, 0, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                        Grid.Column="0"
                                        Orientation="Horizontal">

                                            <TextBlock
                                            Text="Người lớn"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            VerticalAlignment="Center"
                                            Margin="0, 0, 16, 0"/>

                                            <Button 
                                            Width="36" 
                                            Height="36"
                                            VerticalAlignment="Center"  
                                            Background="#E8F1FD"
                                            Cursor="Hand">
                                                <materialDesign:PackIcon 
                                            Kind="Minus" 
                                            Width="20" 
                                            Height="20" 
                                            Foreground="#1570EF"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="20">
                                                            <ContentPresenter 
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <TextBlock 
                                            Text="0"
                                            FontSize="18"
                                            FontWeight="Medium"
                                            VerticalAlignment="Center"
                                            Margin="16, 0, 16, 0"/>

                                            <Button 
                                            Width="36" 
                                            Height="36"
                                            VerticalAlignment="Center"  
                                            Background="#E8F1FD"
                                            Cursor="Hand">
                                                <materialDesign:PackIcon 
                                            Kind="Plus" 
                                            Width="20" 
                                            Height="20" 
                                            Foreground="#1570EF"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="20">
                                                            <ContentPresenter 
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>

                                        <StackPanel
                                        Grid.Column="1"
                                        Orientation="Horizontal"
                                        Margin="24, 0, 0, 0">

                                            <TextBlock
                                            Text="Trẻ em"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            VerticalAlignment="Center"
                                            Margin="0, 0, 16, 0"/>

                                            <Button 
                                            Width="36" 
                                            Height="36"
                                            VerticalAlignment="Center"  
                                            Background="#E8F1FD"
                                            Cursor="Hand">
                                                <materialDesign:PackIcon 
                                            Kind="Minus" 
                                            Width="20" 
                                            Height="20" 
                                            Foreground="#1570EF"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="20">
                                                            <ContentPresenter 
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <TextBlock 
                                            Text="0"
                                            FontSize="18"
                                            FontWeight="Medium"
                                            VerticalAlignment="Center"
                                            Margin="16, 0, 16, 0"/>

                                            <Button 
                                            Width="36" 
                                            Height="36"
                                            VerticalAlignment="Center"  
                                            Background="#E8F1FD"
                                            Cursor="Hand">
                                                <materialDesign:PackIcon 
                                            Kind="Plus" 
                                            Width="20" 
                                            Height="20" 
                                            Foreground="#1570EF"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="20">
                                                            <ContentPresenter 
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                    <Button
                                    Style="{DynamicResource BlueButtonStyle}"
                                    Height="46"
                                    Width="220"
                                    Content="Tra cứu phòng"
                                    HorizontalAlignment="Center"
                                    Cursor="Hand"
                                    Margin="0, 32, 0, 0"/>
                                </StackPanel>
                            </Border>

                            <DataGrid 
                                Background="#FFFFFF"
                                Width="530"
                                Height="300"                                
                                materialDesign:DataGridAssist.CornerRadius="12"
                                ItemsSource="{Binding }"
                                SelectionUnit="FullRow"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                HeadersVisibility="Column"
                                RowHeight="50"
                                ColumnWidth="*"
                                IsReadOnly="True"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                Margin="16, 24, 0, 0">

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Số phòng" Binding="{Binding }" Width="Auto"/>
                                    <DataGridTextColumn Header="Loại phòng" Binding="{Binding }" Width="*"/>
                                    <DataGridTextColumn Header="Giá" Binding="{Binding }" Width="*"/>
                                    <DataGridTextColumn Header="Cơ sở vật chất" Binding="{Binding }" Width="2*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <Border 
                            Grid.Column="1"
                            Background="White" 
                            CornerRadius="12" 
                            Width="440"
                            HorizontalAlignment="Right"
                            Margin="0, 24, 16, 0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border
                                    Grid.Row="0"
                                    Width="440"
                                    Height="56"
                                    Background="#1570EF"
                                    CornerRadius="12 12 0 0">
                                    <TextBlock 
                                        Text="Hóa Đơn" 
                                        FontSize="22" 
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>

                                <ScrollViewer 
                                    Grid.Row="1"
                                    Width="408"
                                    Padding="0, 16"
                                    HorizontalAlignment="Center"
                                    VerticalScrollBarVisibility="Hidden">
                                    <StackPanel>
                                        <ItemsControl ItemsSource="{Binding }">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,0,0,12">
                                                        <TextBlock Text="{Binding }" FontSize="22" FontWeight="Medium"/>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock 
                                                                Grid.Column="0" 
                                                                HorizontalAlignment="Left"
                                                                Text="{Binding }" 
                                                                FontSize="20" FontWeight="Medium"/>

                                                            <TextBlock 
                                                                Grid.Column="1"
                                                                HorizontalAlignment="Right"
                                                                Text="{Binding }" 
                                                                FontSize="20" FontWeight="Medium"/>
                                                        </Grid>

                                                        <TextBlock Text="{Binding }" FontSize="18" FontWeight="Medium"/>
                                                        <Separator Margin="0 8 0 0" Background="#DDD"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <ItemsControl ItemsSource="{Binding }">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,0,0,12">
                                                        <TextBlock Text="{Binding }" FontSize="22" FontWeight="Medium"/>

                                                        <TextBlock 
                                                            Text="{Binding }" 
                                                            FontSize="20" 
                                                            FontWeight="Medium"/> 

                                                        <Separator Margin="0 8 0 0" Background="#DDD"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </ScrollViewer>

                                <StackPanel 
                                    Grid.Row="2"
                                    Margin="0 16 16 22" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                                    <TextBlock Text="Tổng: " FontWeight="Bold" FontSize="20"/>
                                    <TextBlock Text="{Binding }" FontSize="20"/>
                                </StackPanel>

                                <Button 
                                    Grid.Row="3"
                                    Style="{DynamicResource BlueButtonStyle}"
                                    Width="200"
                                    Height="50"
                                    Cursor="Hand"
                                    Margin="0, 0, 0, 16">
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="28"
                                            Height="28"
                                            VerticalAlignment="Center"
                                            Kind="BookmarkOutline"/>
                                        <TextBlock
                                            Text="Lưu"
                                            FontSize="20"
                                            VerticalAlignment="Center"
                                            Margin="4, 0, 0, 0"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
